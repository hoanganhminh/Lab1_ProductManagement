@model BusinessObjects.Product

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="col-lg-8 border p-3 main-section bg-white">
        <div class="row m-0">
            <div class="col-lg-12">
                <div class="right-side-pro-detail border p-3 m-0">
                    <div class="row">
                            <div class="col-lg-12">
                                <span>@Model.ProductId</span>
                                <p class="m-0 p-0">@Model.ProductName</p>
                            </div>
                            <div class="col-lg-12">
                                <p class="m-0 p-0 price-pro">$@Model.UnitPrice</p>
                                <hr class="p-0 m-0">
                            </div>
                            <div class="col-lg-12">
                                <p class="tag-section"><strong>Category : </strong> @Model.Category.CategoryName</p>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<style>

    .main-section {
        position: absolute;
        left: 50%;
        right: 50%;
        transform: translate(-50%, 5%);
    }

    .left-side-product-box img {
        width: 100%;
    }

    .left-side-product-box .sub-img img {
        margin-top: 5px;
        width: 83px;
        height: 100px;
    }

    .right-side-pro-detail span {
        font-size: 15px;
    }

    .right-side-pro-detail p {
        font-size: 25px;
        color: #a1a1a1;
    }

    .right-side-pro-detail .price-pro {
        color: #E45641;
    }

    .right-side-pro-detail .tag-section {
        font-size: 18px;
        color: #5D4C46;
    }

    .pro-box-section .pro-box img {
        width: 100%;
        height: 200px;
    }
</style>
