@model ProductMVC.Controllers.ProductCategoryList

@{
    ViewData["Title"] = "Edit Product Page";
}

<form method="post">
  <div class="form-group" hidden>
    <input type="text" class="form-control" name="ProductId" id="exampleFormControlInput1" value="@Model.CustomObject1.ProductId">
  </div>
  <div class="form-group">
    <label for="exampleFormControlInput1">Product Name</label>
    <input type="text" class="form-control" name="ProductName" id="exampleFormControlInput1" value="@Model.CustomObject1.ProductName" placeholder="Enter product name...">
  </div>
  <div class="form-group">
    <label for="exampleFormControlSelect1">Category</label>
    <select class="form-control" id="exampleFormControlSelect1" name="CategoryId">
            @foreach(var item in Model.CustomObject2)
            {
                  <option value="@(item.CategoryId)" selected="@(item.CategoryId == Model.CustomObject1.CategoryId)">@(item.CategoryId). @(item.CategoryName)</option>
            }
    </select>
  </div>
  <div class="form-group">
    <label for="exampleFormControlInput2">UnitsInStock</label>
    <input type="number" name="UnitsInStock" class="form-control" id="exampleFormControlInput2" value="@Model.CustomObject1.UnitsInStock" min="0">
  </div>
  <div class="form-group">
    <label for="exampleFormControlInput3">Unit Price</label>
    <input type="number" name="UnitPrice" class="form-control" id="exampleFormControlInput3" value="@Model.CustomObject1.UnitPrice" min="0">
  </div>
  <div class="form-group">
    <input class="mt-1 btn btn-success" type="submit" value="Submit">
  </div>
</form>
